[Unit]
Description=Consul agent
After=network.target

[Service]
Type=simple
EnvironmentFile=-/etc/default/consul
User=consul
Group=consul
ExecStart=/usr/bin/consul agent $CONSUL_FLAGS
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=10
LimitNOFILE=infinity

[Install]
WantedBy=multi-user.target
